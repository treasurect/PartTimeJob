<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fitsSystemWindows="true"
  android:orientation="vertical">

  <include layout="@layout/layout_top_view" />

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/selected_bepress"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="15dp"
      android:text="当前版本"
      android:textColor="@color/black_2d"
      android:textSize="14sp" />

    <TextView
      android:id="@+id/versionname"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_marginRight="15dp"
      android:textColor="@color/gray_8c"
      android:textSize="14sp" />
  </RelativeLayout>


  <RelativeLayout
    android:id="@+id/about"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="2dp"
    android:background="@drawable/selected_bepress"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="15dp"
      android:text="关于"
      android:textColor="@color/black_2d"
      android:textSize="14sp" />

    <ImageView
      android:layout_width="10dp"
      android:layout_height="12dp"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_marginLeft="11dp"
      android:layout_marginRight="15dp"
      android:src="@mipmap/go" />
  </RelativeLayout>

  <RelativeLayout
    android:id="@+id/out_login"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="50dp"
    android:background="@drawable/selected_bepress"
    android:orientation="horizontal">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:text="退出登录"
      android:textColor="@color/blue_32cbd1"
      android:textSize="14sp" />

  </RelativeLayout>

</LinearLayout>