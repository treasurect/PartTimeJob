<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.activity.PartDetailActivity">
<android.support.design.widget.AppBarLayout
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:fitsSystemWindows="true"
  android:background="@color/white"
  android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
  app:elevation="1dp"
  android:paddingBottom="50dp">
  <android.support.design.widget.CollapsingToolbarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentScrim="@color/yellow_ffe301"
    app:layout_scrollFlags="scroll|exitUntilCollapsed">
    <ImageView
      android:id="@+id/background"
      android:layout_width="match_parent"
      android:layout_height="225dp"
      android:scaleType="centerCrop"
      app:layout_collapseMode="parallax" />
    <android.support.v7.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="64dp"
      android:background="#00ffffff"
      android:gravity="center_vertical"
      app:contentInsetEnd="0dp"
      app:contentInsetStart="0dp"
      app:layout_collapseMode="pin"
      app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
      app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
      app:titleTextColor="#ffffff">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
          android:id="@+id/back"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="8dp"
          android:layout_marginTop="20dp"
          android:background="@mipmap/ic_back" />
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="兼职详情"
          android:layout_marginTop="20dp"
          android:layout_centerInParent="true"
          android:textColor="@color/white"
          android:textSize="15sp"/>
      </RelativeLayout>
    </android.support.v7.widget.Toolbar>
  </android.support.design.widget.CollapsingToolbarLayout>
  <TextView
    android:id="@+id/part_name"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:textColor="@color/black_2d"
    android:gravity="center_vertical"
    android:paddingLeft="15dp"
    android:textSize="18sp"
    android:textStyle="bold"/>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="horizontal">
    <TextView
      android:id="@+id/part_money"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingRight="15dp"
      android:textSize="15sp"
      android:textStyle="bold"
      android:layout_gravity="center_vertical"
      android:textColor="@color/red"/>
    <TextView
      android:id="@+id/part_tag"
      android:layout_gravity="center_vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/black_88"/>
  </LinearLayout>
  <View
    android:layout_width="match_parent"
    android:layout_height="8dp"
    android:background="@color/white_f8"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"/>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="horizontal">
    <View
      android:layout_width="4dp"
      android:layout_height="16dp"
      android:layout_marginRight="5dp"
      android:background="@color/yellow_ffe301"/>
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textStyle="bold"
      android:text="商家"
      android:textColor="@color/black_88"/>
  </LinearLayout>
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingLeft="15dp"
    android:gravity="center_vertical"
    android:paddingRight="15dp">
    <ImageView
      android:id="@+id/business_image"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:src="@mipmap/ic_launcher_logo"/>
    <TextView
      android:id="@+id/business_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" 
      android:text="广州恒泰"
      android:layout_toRightOf="@id/business_image"
      android:layout_marginLeft="15dp"
      android:textColor="@color/black_88"/>
    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@mipmap/pic_star"
      android:layout_toRightOf="@id/business_image"
      android:layout_below="@id/business_name"
      android:layout_marginLeft="6dp"
      android:layout_marginTop="5dp"/>
  </RelativeLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="horizontal">
    <View
      android:layout_width="4dp"
      android:layout_height="16dp"
      android:layout_marginRight="5dp"
      android:background="@color/yellow_ffe301"/>
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textStyle="bold"
      android:text="商家"
      android:textColor="@color/black_88"/>
    <View
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"/>
    <TextView
      android:id="@+id/part_address"
      android:layout_width="wrap_content"
      android:gravity="center_vertical|right"
      android:layout_height="match_parent"
      android:textStyle="bold"
      android:textColor="@color/black_88"
      android:text="地址"/>
    <ImageView
      android:id="@+id/part_map"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@mipmap/go"
      android:padding="5dp"/>
  </LinearLayout>
  <TextView
    android:id="@+id/part_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/black_88"
    android:padding="15dp"/>
</android.support.design.widget.AppBarLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="bottom"
    android:orientation="horizontal">

    <LinearLayout
      android:id="@+id/collect_layout"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="@android:color/white"
      android:gravity="center"
      android:orientation="horizontal">

      <ImageView
        android:id="@+id/collect_img"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:src="@drawable/collection"/>

      <TextView
        android:id="@+id/reading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="@color/gray_8c"
        android:textSize="14sp"
        android:text="收藏"/>
    </LinearLayout>

    <TextView
      android:id="@+id/apply"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="2"
      android:background="@color/yellow_ffe301"
      android:gravity="center"
      android:text="立即报名"
      android:textColor="@color/black_2d"
      android:textSize="16sp" />
  </LinearLayout>
</android.support.design.widget.CoordinatorLayout>