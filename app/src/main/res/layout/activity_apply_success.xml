<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".ui.activity.ApplySuccessActivity">

  <include layout="@layout/layout_top_view" />

  <TextView
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center"
    android:text="请电话联系商家，完成录取"
    android:textColor="@color/black_2d"
    android:textSize="14dp"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/business_phone"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="@drawable/shape_solid_ffe301_r_6"
    android:gravity="center"
    android:text="拨打商家电话"
    android:textSize="16sp" />

  <TextView
    android:id="@+id/business_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="10dp"
    android:text="联系人"
    android:textSize="14sp" />
</LinearLayout>