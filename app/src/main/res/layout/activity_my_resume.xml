<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fitsSystemWindows="true"
  android:orientation="vertical">

  <include layout="@layout/layout_top_view" />

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f8f8f8"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical">
        <View
          android:layout_width="3dp"
          android:layout_height="15dp"
          android:background="@color/yellow_ffe301" />
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:text="基本资料"
          android:textColor="@color/blue_32cbd1"
          android:textSize="14sp" />
      </LinearLayout>


      <RelativeLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selected_bepress">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="15dp"
          android:text="姓名"
          android:textColor="@color/black_2d"
          android:textSize="14sp" />

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_alignParentRight="true"
          android:layout_marginRight="15dp"
          android:gravity="center_vertical">

          <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="未设置"
            android:textColor="@color/white_d5"
            android:textColorHint="@color/white_d5"
            android:textSize="14sp" />

          <ImageView
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/go" />
        </LinearLayout>
      </RelativeLayout>

      <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white_f2" />

      <RelativeLayout
        android:id="@+id/sex_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selected_bepress">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="15dp"
          android:text="性别"
          android:textColor="@color/black_2d"
          android:textSize="14sp" />

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_alignParentRight="true"
          android:layout_marginRight="15dp"
          android:gravity="center_vertical">

          <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未设置"
            android:textColor="@color/white_d5"
            android:textSize="14sp" />

          <ImageView
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/go" />
        </LinearLayout>
      </RelativeLayout>

      <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white_f2" />

      <RelativeLayout
        android:id="@+id/birthday_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selected_bepress">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="15dp"
          android:text="生日"
          android:textColor="@color/black_2d"
          android:textSize="14sp" />

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_alignParentRight="true"
          android:layout_marginRight="15dp"
          android:gravity="center_vertical">

          <TextView
            android:id="@+id/birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未设置"
            android:textColor="@color/white_d5"
            android:textSize="14sp" />

          <ImageView
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/go" />
        </LinearLayout>
      </RelativeLayout>

      <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white_f2" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#f8f8f8"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical">
        <View
          android:layout_width="3dp"
          android:layout_height="15dp"
          android:background="@color/yellow_ffe301" />
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:text="教育经历"
          android:textColor="@color/blue_32cbd1"
          android:textSize="14sp" />
      </LinearLayout>


      <RelativeLayout
        android:id="@+id/school_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/selected_bepress">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="15dp"
          android:text="入学日期"
          android:textColor="@color/black_2d"
          android:textSize="14sp" />

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_alignParentRight="true"
          android:layout_marginRight="15dp"
          android:gravity="center_vertical">

          <TextView
            android:id="@+id/school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_d5"
            android:textSize="14sp" />

          <ImageView
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/go" />
        </LinearLayout>
      </RelativeLayout>

      <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white_f2" />

      <RelativeLayout
        android:id="@+id/school_layout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selected_bepress">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="15dp"
          android:text="学校名称"
          android:textColor="@color/black_2d"
          android:textSize="14sp" />

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_alignParentRight="true"
          android:layout_marginRight="15dp"
          android:gravity="center_vertical">

          <EditText
            android:id="@+id/school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="未设置"
            android:textColor="@color/white_d5"
            android:textColorHint="@color/white_d5"
            android:textSize="14sp" />

          <ImageView
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/go" />
        </LinearLayout>
      </RelativeLayout>

      <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white_f2" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#f8f8f8"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:orientation="horizontal">

        <View
          android:layout_width="3dp"
          android:layout_height="15dp"
          android:background="@color/yellow_ffe301" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="工作经验"
          android:layout_marginLeft="5dp"
          android:textColor="@color/blue_32cbd1"
          android:textSize="14sp" />
      </LinearLayout>

      <EditText
        android:id="@+id/work_edit"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white" />
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#f8f8f8"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:orientation="horizontal">

        <View
          android:layout_width="3dp"
          android:layout_height="15dp"
          android:background="@color/yellow_ffe301" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="自我介绍"
          android:layout_marginLeft="5dp"
          android:textColor="@color/blue_32cbd1"
          android:textSize="14sp" />
      </LinearLayout>

      <EditText
        android:id="@+id/mine_edit"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white" />
    </LinearLayout>
  </ScrollView>
</LinearLayout>