<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white_f8"
  android:orientation="vertical"
  android:scrollbars="none">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="150dp">

      <ImageView
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/personal_top_bg" />

      <RelativeLayout
        android:id="@+id/headlayout"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="52dp">

        <View
          android:layout_width="73dp"
          android:layout_height="73dp"
          android:layout_centerInParent="true"
          android:background="@drawable/white_2_3raduis" />

        <ImageView
          android:id="@+id/head_img"
          android:layout_width="70dp"
          android:layout_height="70dp"
          android:layout_centerInParent="true" />
      </RelativeLayout>

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="56dp"
        android:orientation="vertical"
        android:layout_toRightOf="@id/headlayout"
        android:gravity="center_vertical">

        <TextView
          android:id="@+id/name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/black_2d"
          android:textSize="16sp"/>

        <TextView
          android:id="@+id/sign"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:textColor="@color/black_2d"
          android:textSize="16sp"/>
      </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="160dp"
      android:layout_margin="20dp"
      app:cardCornerRadius="10dp"
      app:cardElevation="10dp">

      <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/pic_fresh" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="我的简历"
          android:textSize="18sp"
          android:layout_marginTop="10dp"
          android:textStyle="bold"/>
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="完善简历提高你的录取率！"
          android:layout_marginTop="10dp"/>
        <TextView
          android:id="@+id/perfect_resume"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="去完善"
          android:layout_marginTop="10dp"
          android:textStyle="bold"
          android:textColor="@color/blue_32cbd1"
          android:paddingLeft="10dp"
          android:paddingRight="10dp"
          android:paddingTop="5dp"
          android:paddingBottom="5dp"
          android:background="@drawable/shape_stroke_32cbd1_r_15"/>
      </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="120dp"
      android:background="@color/white"
      android:orientation="horizontal">

      <LinearLayout
        android:id="@+id/apply_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
          android:layout_width="35dp"
          android:layout_height="50dp"
          android:src="@mipmap/ic_apply" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="已申请" />
      </LinearLayout>

      <LinearLayout
        android:id="@+id/admit_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
          android:layout_width="40dp"
          android:layout_height="50dp"
          android:src="@mipmap/ic_admit" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="已录取" />
      </LinearLayout>

      <LinearLayout
        android:id="@+id/complete_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
          android:layout_width="35dp"
          android:layout_height="50dp"
          android:src="@mipmap/ic_complete" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="已完成" />
      </LinearLayout>
    </LinearLayout>

    <RelativeLayout
      android:id="@+id/my_collect"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginTop="2dp"
      android:background="@drawable/bepress"
      android:gravity="center_vertical"
      android:orientation="horizontal">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginLeft="10dp"
          android:src="@mipmap/personal_notice_icon" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:text="我的收藏"
          android:textColor="@color/black_2d" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical">

        <ImageView
          android:layout_width="10dp"
          android:layout_height="12dp"
          android:layout_marginLeft="11dp"
          android:layout_marginRight="12dp"
          android:src="@mipmap/go" />
      </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
      android:id="@+id/settings"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginTop="2dp"
      android:background="@drawable/bepress"
      android:gravity="center_vertical"
      android:orientation="horizontal">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginLeft="10dp"
          android:src="@mipmap/personal_mycollection_icon" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:text="设置"
          android:textColor="@color/black_2d" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical">
        <!--<View-->
        <!--android:layout_width="6dp"-->
        <!--android:layout_height="6dp"-->
        <!--android:id="@+id/letter_point"-->
        <!--android:visibility="gone"-->
        <!--android:background="@drawable/sharpe_yuan_6"-->
        <!--/>-->
        <ImageView
          android:layout_width="10dp"
          android:layout_height="12dp"
          android:layout_marginLeft="11dp"
          android:layout_marginRight="12dp"
          android:src="@mipmap/go" />
      </LinearLayout>
    </RelativeLayout>

  </LinearLayout>

</ScrollView>
