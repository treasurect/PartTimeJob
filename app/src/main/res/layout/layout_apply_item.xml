<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="160dp"
  android:id="@+id/root"
  android:orientation="vertical">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
      android:layout_width="0dp"
      android:layout_weight="1"
      android:paddingLeft="15dp"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <TextView
        android:id="@+id/part_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/black_2d"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:text="小提琴"
        android:textStyle="bold"/>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
          android:id="@+id/part_money"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingRight="15dp"
          android:textSize="14sp"
          android:textStyle="bold"
          android:text="150"
          android:layout_gravity="center_vertical"
          android:textColor="@color/red"/>
        <TextView
          android:id="@+id/part_tag"
          android:layout_gravity="center_vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="长期"
          android:textSize="14sp"
          android:textColor="@color/black_88"/>
      </LinearLayout>
    </LinearLayout>
    <ImageView
      android:id="@+id/part_image"
      android:layout_width="120dp"
      android:layout_height="80dp"
      android:layout_margin="15dp"
      android:layout_gravity="center_vertical"
      android:src="@mipmap/pic_fresh"/>
  </LinearLayout>
  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/white_d5"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"/>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">
    <TextView
      android:id="@+id/part_business"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:text="联系商家"
      android:gravity="center"
      android:textColor="@color/black_2d"/>
    <View
      android:layout_width="1dp"
      android:layout_height="match_parent"
      android:background="@color/white_d5"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"/>
    <TextView
      android:id="@+id/part_apply"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:text="联系商家"
      android:gravity="center"
      android:textColor="@color/black_2d"/>
  </LinearLayout>
  <View
    android:layout_width="match_parent"
    android:layout_height="8dp"
    android:background="@color/white_d5"/>
</LinearLayout>